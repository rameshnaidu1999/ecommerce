<div class="container">
    <div class="row">
        <div class="col-10 mx-auto">
            
            <div class="card my-5 border-danger">
                <div class="card-title">
                    <h1 class="float-left font-weight-bold my-2 ml-3">DASHBOARD </h1>
                    <a href="/admin" class="btn btn-primary float-right my-2 mr-3">Admin</a>
                </div>
                <div class="card-body ">
                    <table class="table table-hover table-dark">
                        <thead>
                          <tr>
                            <th scope="col">Product Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Handle</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(function( product) { %>
                          <tr>
                            <td scope="row"><%= product._id %></td>
                            <td><%= product.title %></td>
                            <td><%= product.category %></td>
                            <td><div class="btn btn-success">Edit</div>
                                <div class="btn btn-danger">Delete</div></td>
                          </tr>
                          <% }) %>
                
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>
</div>