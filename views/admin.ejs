<div class="container">
    <div class="row">
        <div class="col-lg-9 col-md-11 mx-auto my-5">
          
          <div class="card border-primary">
            <div class="card-title">
              <h1 class="float-left font-weight-bold my-2 ml-3">ADD PRODUCTS</h1>
            </div>
            <div class="card-body">
                  <form action="/admin" method="POST"> 
                    <div class="form-group">
                      <label for="title">Product Title</label>
                      <input 
                        type="name " 
                        class="form-control" 
                        id="title" 
                        name="title" 
                        placeholder="Enter Product Title"
                        required
                        />
                    </div>
                    <div class="form-group">
                      <label for="description">Product Description</label>
                      <input 
                        type="name " 
                        class="form-control" 
                        id="description" 
                        name="description" 
                        placeholder="Product Description"
                        required
                        />
                    </div>
                    <div class="form-group">
                      <label for="description">Image Link</label>
                      <input type="name" 
                        class="form-control" 
                        id="image" 
                        name="image" 
                        placeholder="Image Link" 
                        required
                        />
                    </div>
                    <div class="row">
                      <div class="col">
                        <div class="form-group">
                          <label for="description">Category</label>
                          <input type="name " 
                            class="form-control" 
                            id="category" 
                            name="category" 
                            placeholder="Product Category"
                            required
                            />
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-group">
                          <label for="description">Price</label>
                          <input type="text " 
                            class="form-control" 
                            id="price" 
                            name="price" 
                            placeholder="Product Price"
                            required
                              /> 
                        </div>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
              </form>
            </div>
          </div>
          
        </div>
    </div>
</div>


